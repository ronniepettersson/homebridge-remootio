{
    "pluginAlias": "Remootio",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "default": "Remootio"
            },
            "devices": {
                "type": "array",
                "items": {
                    "title": "Remootio device",
                    "type": "object",
                    "properties": {
                        "name": {
                            "title": "Name",
                            "type": "string",
                            "required": true,
                            "default": "Remootio Accessory"
                        },
                        "ipAddress": {
                            "title": "IP Address or Hostname",
                            "description": "The device's IP address or hostname. It is recommended to set a static IP for the device.",
                            "type": "string",
                            "required": true,
                            "default": "192.168.1.0"
                        },
                        "apiSecretKey": {
                            "title": "API Secret Key",
                            "description": "The device's API Secret Key ",
                            "type": "string",
                            "required": true,
                            "default": ""
                        },
                        "apiAuthKey": {
                            "title": "API Authentication Key",
                            "description": "The device's API Authentication Key ",
                            "type": "string",
                            "required": true,
                            "default": ""
                        },
                        "garageDoorName": {
                            "title": "Name of garage door",
                            "type": "string",
                            "required": false,
                            "default": "Garage Door"
                        },                        
                        "enablePrimaryRelayOutput": {
                            "title": "Set to true if no sensor is installed. This will disable the garage door service on the primary relay ",
                            "type": "boolean",
                            "required": false,
                            "default": false
                        },
                        "enableSecondaryRelayOutput": {
                            "title": "Enable Free Relay Output on the secondary relay",
                            "type": "boolean",
                            "required": false,
                            "default": false
                        },
                        "primaryRelayName": {
                            "title": "Name of primary relay",
                            "type": "string",
                            "required": false,
                            "default": "Primary Relay"
                        },
                        "secondaryRelayName": {
                            "title": "Name of secondary relay",
                            "type": "string",
                            "required": false,
                            "default": "Secondary Relay"
                        }
                    }
                }
            }
        }
    }
}
